@model Soccer.EndPoint.Models.Players.NewPlayerVm

@{
    ViewBag.Title = "Add New Player";
    Layout = "_Layout";
}
@Html.ValidationSummary(false)
<h2>Add New Player</h2>

<form asp-action="New">
    <div class="mb-3 mt-3">
        <label asp-for="PlayerName" class="form-label">Name:</label>
        <input type="text" class="form-control" id="PlayerName" placeholder="Enter name" name="PlayerName">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>